<%- include('layouts/header'); -%>
<body>
  <%- include('layouts/head');-%>
  <%- include('layouts/nav');-%>
  <div class="form">
    <form name="myform" method="Post" action="/login" >
      <div class="login">
      <h1>Enter admin details</h1>
      <div>
      <label>Username</label>
      <input id="username" placeholder="Username" type="text" name="username" autofocus><br><br>
    </div>

    <div>
      <label>Password</label>&nbsp;
      <input id="password" placeholder="Password" type="password" name="password"><br>
    </div>
      <br/><br/>

      <input type="submit" value="Login">
      <p id="errors">
        <div id="error">
          
            <% if(typeof(error) != 'undefined') { %>
                <%= error %>
            <% } %>
        </div>
      </p>
      </div>
    </form>  
  </div>
</body>
<%- include('layouts/footer'); -%>