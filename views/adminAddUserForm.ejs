<%- include('layouts/header'); -%>

<body>
    <%- include('layouts/head'); -%>
    <%- include('layouts/adminNav'); -%>
    <script>
        const formData = "<%= formData%>";
        if(formData) {
            window.alert("Received")
        }
    </script>
  <div class="form">
    
        <h1>Organ Donation Register</h1>
        
        <form action="" method="post">

            <label for="fullName">Full Name:</label>
            <input type="text" id="name" name="name" required placeholder="Name"><br><br>
            
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required placeholder="Email"><br><br>
            
            <label for="phoneNumber">Phone Number:</label>
            <input type="tel" id="phone" name="phone" required placeholder="Phone No."><br><br>
            
            
            <h2>Organ Donation Preferences</h2>
            
            <label for="organType">Select Organ Type:</label>
            <select id="organType" name="type" required>
                <option value="heart">Heart</option>
                <option value="liver">Liver</option>
                <option value="kidney">Kidney</option>
             
            </select><br><br>
            
            <label for="donationPreference">Donation Preference:</label>
            <input type="radio" id="donationPreferenceLiving" name="donationPreference" value="living" required>
            <label for="donationPreferenceLiving">Living Donation</label>
            
            <input type="radio" id="donationPreferenceDeceased" name="donationPreference" value="deceased" required>
            <label for="donationPreferenceDeceased">Deceased Donation</label><br><br>
            
            <h2>Additional Information</h2>
            
            <label for="message">Additional Message:</label>
            <textarea id="textarea" name="message" rows="4" cols="50" placeholder="Message"></textarea><br><br>
            
            <button type="reset" class="danger">Clear</button>
            <button type="submit">Submit</button>
        </form>
        <%- include('layouts/footer');-%>
    </body>
    </html>
    
